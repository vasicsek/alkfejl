{% extends "layout" %}

{% block content %}
<h2>Felhasználó módosítása</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="username" name="username" placeholder="Név" value="{{ user.username }}">
    </div>
  </div>
   <div class="form-group">
    <label for="email" class="col-lg-2 control-label">E-mail cím</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="email" name="email" placeholder="E-mail" value="{{ user.email }}">
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-lg-2 control-label">Új jelszó</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="password" name="password" placeholder="12345" value="">
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="submit" class="btn btn-primary">Módosít</button>
      <button type="reset" class="btn btn-default">Mégsem</button>
    </div>
  </div>
</form>

{% endblock %}