{% extends "layout" %}


{% block content %}
<h2>Regisztráció</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form data-toggle="validator" class="form-horizontal" method="post" id="formRegister">

  {{ csrfField }}

  <div class="form-group has-feedback">
    <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="username" name="username" placeholder="Felhasználónév" value="{{old('username')}}" pattern="^[_A-z0-9]{1,}$" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="email" class="col-lg-2 control-label">Email</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="email" name="email" type="email" placeholder="E-mail" pattern ="\S+@\S+" value="{{old('email')}}"  required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="password" class="col-lg-2 control-label">Jelszó</label>
    <div class="col-lg-10">
      <input type="password" class="form-control" id="password" name="password" placeholder="Jelszó" value=""  required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="password_confirm" class="col-lg-2 control-label">Jelszó</label>
    <div class="col-lg-10">
      <input type="password" class="form-control" id="password_confirm" name="password_confirm" placeholder="Jelszó" value=""  
      data-match="#password" data-match-error="Nem egyezik meg." required >
       <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="submit" class="btn btn-primary">Küldés</button>
      <button type="reset" class="btn btn-default">Mégsem</button>
    </div>
  </div>
</form>

{% endblock %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %} 