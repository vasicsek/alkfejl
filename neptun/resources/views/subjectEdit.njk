{% extends "layout" %}

{% block content %}
<h2>Tantárgy módosítása</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="name" class="col-lg-2 control-label">Tantárgy neve</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Tantárgy neve" value="{{ subject.name }}">
    </div>
  </div>
   <div class="form-group">
    <label for="semester" class="col-lg-2 control-label">Félév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="semester" name="semester" placeholder="Félév" value="{{ subject.semester }}">
    </div>
  </div>
  <div class="form-group">
    <label for="credit" class="col-lg-2 control-label">Kredit</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="credit" name="credit" placeholder="Kredit" value="{{ subject.credit }}">
    </div>
  </div>
  <div class="form-group">
    <label for="category_id" class="col-lg-2 control-label">Kategória</label>
    <div class="col-lg-10">
      <select class="form-control" id="category_id" name="category_id">
        {% for category in categories %}
        <option value="{{ category.id }}"
          {% if category.id == subject.category_id %}
          selected
          {% endif %}
        >{{ category.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="submit" class="btn btn-primary">Módosít</button>
      <button type="reset" class="btn btn-default">Mégsem</button>
    </div>
  </div>
</form>

{% endblock %}