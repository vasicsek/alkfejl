{% extends "layout" %}

{% block content %}
<h2>Új Tantárgy</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form data-toggle="validator" class="form-horizontal" method="post" id="formAdd">

  {{ csrfField }}

  <div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Tárgy neve</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Tárgy neve" value="{{old('name')}}" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="semester" class="col-lg-2 control-label">Félév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="semester" name="semester" placeholder="Félév" pattern="^[0-9]+$" value="{{old('semester')}}" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="credit" class="col-lg-2 control-label">Kredit</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="credit" name="credit" placeholder="Kredit" pattern="^[0-9]+$" value="{{old('credit')}}" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group">
    <label for="category_id" class="col-lg-2 control-label">Kategória</label>
    <div class="col-lg-10">
      <select class="form-control" id="category_id" name="category_id">
        {% for category in categories %}
        <option value="{{ category.id }}"
          {% if category.id == old('category_id') %}
          selected
          {% endif %}
        >{{ category.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="submit" class="btn btn-primary">Hozzáad</button>
      <button type="reset" class="btn btn-default">Mégsem</button>
    </div>
  </div>
</form>

{% endblock %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %} 